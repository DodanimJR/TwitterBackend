// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int    @id @default(autoincrement())
  username String
  name String 
  email String  @unique
  password String
  avatar String @default("https://thumbs.dreamstime.com/b/default-avatar-profile-vector-user-profile-default-avatar-profile-vector-user-profile-profile-179376714.jpg")
  posts Post[]
  replys Reply[] @relation("author")
  followedBy Follows[] @relation("following")
  following  Follows[] @relation("follower")
}

model Post {
  id       Int  @id @default(autoincrement())
  author   User @relation(fields: [authorId], references: [id])
  authorId Int
  text     String 
  likes   Int @default(0)
  replys Reply[]
}

model Reply{
  id       Int  @id @default(autoincrement())
  author   User @relation("author",fields: [authorId], references: [id])
  authorId Int
  originalPost Post @relation(fields: [PostId], references: [id])
  PostId Int
  text     String
  likes   Int @default(0)
}

model Follows {
  follower    User @relation("follower", fields: [followerId], references: [id])
  followerId  Int
  following   User @relation("following", fields: [followingId], references: [id])
  followingId Int

  @@id([followerId, followingId])
}
